<!DOCTYPE html>
<html>
  <head>
    <title>My Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/projects">Home</a>
        <div class="align-right row">
         <% if user_signed_in? %>     
            <!-- <%= link_to current_user.email, edit_user_registration_path(current_user), class: "user-name" %> -->
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-outline-light btn-defualt"%>
            <%= button_to "New Project", new_project_path, method: :get, :class => "btn btn-outline-light btn-defualt"%>
          <% else %>
            <%= button_to "Sign in", new_user_session_path, method: :get, :class => "btn btn-outline-light btn-default" %>
            <%= button_to "Sign up", new_user_registration_path, method: :get, :class => "btn btn-outline-light btn-defualt" %>
          <% end %>
        </div>
      </div>
    </nav>

  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
